<!--It's highly recommended to tag "PassageHeader" or whatever file you use with "nobr". This will create a ton of white space at the top of the page otherwise--> 
<!--hour to day flip-->
<<for $h to 0; $nt.hour >= 24; $h++>>
    <<if $nt.hour == 24>>
      <<set 
        $nt.hour -= 24,
        $nt.day += 1
      >>
  <<elseif $nt.hour > 24>>
      <<set
        $nt.hour -= 24,
        $nt.day += 1
      >>
  <</if>>
<</for>>

<!--day to month flip-->
<<for $d to 0; $nt.day >= 29; $d++>>
    <<if $nt.day == 29>>
      <<set 
        $nt.day -= 28,
        $nt.month += 1
      >>
  <<elseif $nt.day > 29>>
      <<set
        $nt.day -= 28,
        $nt.month += 1
      >>
  <</if>>
<</for>>

<!--month to year flip-->
<<if $nt.month == 13>>
  <<set
    $nt.month to 1,
    $nt.year += 1
  >>
<</if>>

<!--Weekday Display-->
<<switch $nt.day>><<case 1 8 15 22>><<set $ntd.wd to "Sunday">><<case 2 9 16 23>><<set $ntd.wd to "Monday">><<case 3 10 17 24>><<set $ntd.wd to "Tuesday">><<case 4 11 18 25>><<set $ntd.wd to "Wednesday">><<case 5 12 19 26>><<set $ntd.wd to "Thursday">><<case 6 13 20 27>><<set $ntd.wd to "Friday">><<case 7 14 21 28>><<set $ntd.wd to "Saturday">><<default>><<set $ntd.wd to "Error">><</switch>>

<!--Month Display-->
<<switch $nt.month>><<case 1>><<set $ntd.month to "January">><<case 2>><<set $ntd.month to "February">><<case 3>><<set $ntd.month to "March">><<case 4>><<set $ntd.month to "April">><<case 5>><<set $ntd.month to "May">><<case 6>><<set $ntd.month to "June">><<case 7>><<set $ntd.month to "July">><<case 8>><<set $ntd.month to "August">><<case 9>><<set $ntd.month to "September">><<case 10>><<set $ntd.month to "October">><<case 11>><<set $ntd.month to "November">><<case 12>><<set $ntd.month to "December">><<default>><<set $ntd.month to "Error">><</switch>>

<!--Season Display-->
<<switch $nt.month>><<case 3 4 5>><<set $ntd.season to "Spring">><<case 6 7 8>><<set $ntd.season to "Summer">><<case 9 10 11>><<set $ntd.season to "Fall">><<case 12 1 2>><<set $ntd.season to "Winter">><<default>>Error<</switch>>

<!--Hour Display-->
<<if $nt.hour <=11 and $nt.hour !=0>>
<<set $ntd.hour to "$nt.hour:00 AM">>
<<elseif $nt.hour==12>>
<<set $ntd.hour to "12:00 PM">>
<<elseif $nt.hour===0>>
<<set $ntd.hour to "12:00 AM">>
<<elseif $nt.hour > 12>>
<<set $showhour to $nt.hour - 12>>
<<set $ntd.hour to "$showhour:00 PM">>
<</if>>
